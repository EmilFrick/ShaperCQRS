@model ShapeUpsertModel
@{
    var formtype = Model?.Id == 0 ? "Create" : "Update";
}

<h1 class="shaper-title">@formtype.ToUpper() SHAPE</h1>
<div class="shaper-container">
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="row my-2">
            <div class="col">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="col">
                <label asp-for="AddedValue"></label>
                <input asp-for="AddedValue" class="form-control">
                <span asp-validation-for="AddedValue"></span>
            </div>
        </div>
            <div class="col-5 my-3">
                <label asp-for="HasFrame" class="form-check-label" for="flexCheckDefault">Add Frame?&nbsp;&nbsp;</label>
                <input asp-for="HasFrame" class="form-check-input-lg" type="checkbox" id="flexCheckDefault">
            </div>
        <partial name="Buttons/_Confirm" model="formtype" />
    </form>
</div>
