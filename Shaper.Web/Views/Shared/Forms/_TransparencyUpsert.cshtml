@model TransparencyUpsertModel
@{
    var formtype = Model?.Id == 0 ? "Create" : "Update";
}

<h1 class="shaper-title">@formtype.ToUpper() SHAPE</h1>
<div class="shaper-container">
    <form method="post">
        <input asp-for="Id" hidden />
        <div class="row my-2">
            <div class="col">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="col">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                <label asp-for="Value" for="customRange1" class="form-label">Transparency</label>
                <input asp-for="Value" type="range" class="form-range" id="customRange1">
                <p class="indigo-light-text fw-bold" id="range-output"></p>
            </div>
            <div class="col">
                <label asp-for="AddedValue"></label>
                <input asp-for="AddedValue" class="form-control">
                <span asp-validation-for="AddedValue"></span>
            </div>
        </div>
        <partial name="Buttons/_Confirm" model="formtype" />
    </form>
</div>


